{
  "name": "your-wedding-backend",
  "version": "1.0.0",
  "description": "Backend API for wedding website",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "migrate:make": "npx pg-migrate create",
    "migrate:up": "npx pg-migrate up",
    "migrate:down": "npx pg-migrate down",
    "migrate:redo": "npx pg-migrate redo",
    "migrate:fresh": "npx pg-migrate down --all && npx pg-migrate up"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "node-pg-migrate": "^8.0.2",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.0",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
